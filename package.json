{
    "name": "digital-nomads-api-mysql",
    "author": "Rhys Malyon",
    "license": "ISC",
    "version": "1.0.0",
    "description": "API connecting Digital Nomad Cafes app to its DB",
    "main": "index.ts",
    "target": "node",
    "scripts": {
        "start": "set -a && . ./.env && npx ts-node src/index.ts",
        "start:watch": "nodemon src/index.ts",
        "build": "npm run clean && npm install && npm run build:ts && npm run lint",
        "build:ts": "tsc",
        "watch:ts": "tsc -w",
        "clean": "bash -c \"rm -rf dist/*\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint . --ext .ts --fix --ignore-path .gitignore"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:RhysMalyon/digital-nomad-cafes-api.git"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.20.0",
        "chalk": "^4.1.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.2",
        "express": "^4.18.1",
        "helmet": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "knex": "^2.3.0",
        "mysql": "^2.18.1",
        "mysql2": "^2.3.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/mysql": "^2.15.21",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.2"
    }
}
